{
  "name": "ECI API Helper",
  "description": "navega por las apis de ECI y sus entorno, desde el menú contextual se puede hacer una busqueda con la selección actual",
  "version": "1.0",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": ["contextMenus", "storage","clipboardWrite","clipboardRead"],
  "background": {
    "scripts": [ "jquery-3.3.1.slim.min.js", "popper.min.js", "bootstrap.min.js","locales.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "options.html",
    "scripts": ["jquery-3.3.1.slim.min.js", "popper.min.js", "bootstrap.min.js", "locales.js", "background.js"]
  },
  "icons": {
   "16": "eci16.png",
   "48": "eci48.png",
  "128": "eci128.png"
 }
}
