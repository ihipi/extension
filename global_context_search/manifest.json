{
  "name": "Global Google Search",
  "description": "Use the context menu to search a different country's Google",
  "version": "1.0",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": ["contextMenus", "storage","clipboardWrite","clipboardRead"],
  "background": {
    "scripts": [ "jquery-3.3.1.slim.min.js", "popper.min.js", "bootstrap.min.js","locales.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "options.html",
    "scripts": ["jquery-3.3.1.slim.min.js", "popper.min.js", "bootstrap.min.js", "locales.js", "background.js"]
  },
  "icons": {
   "16": "globalGoogle16.png",
   "48": "globalGoogle48.png",
  "128": "globalGoogle128.png"
 }
}
